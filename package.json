{
  "name": "medicine-delivery-line-bot",
  "version": "1.0.0",
  "description": "中藥配藥媒合系統 LINE Bot",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker-compose -f docker-compose.dev.yml down",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "vercel-build": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup-menus": "node scripts/setup-rich-menus.js",
    "manage-menus": "node scripts/manage-rich-menus.js"
  },
  "keywords": [
    "line-bot",
    "medicine",
    "delivery"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@line/bot-sdk": "^9.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.9",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
