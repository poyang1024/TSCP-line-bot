# 複製此文件為 .env 並填入正確的值

# LINE Bot 設定
LINE_CHANNEL_ACCESS_TOKEN=你的_LINE_ACCESS_TOKEN
LINE_CHANNEL_SECRET=你的_LINE_SECRET

# LIFF 設定 (需要在 LINE Login Channel 中創建，原本是要用來做 line login，但目前沒用到)
LIFF_ID="你的_LIFF_ID"

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis 設定
REDIS_URL=your-redis-url

# 圖文選單 ID (建立後填入)
GUEST_RICH_MENU_ID=richmenu-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MEMBER_RICH_MENU_ID=richmenu-yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy
LOADING_RICH_MENU_ID=richmenu-zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz

# ngrok 設定（僅本地開發需要）
NGROK_AUTHTOKEN=你的_NGROK_TOKEN

# 後端 API 設定
API_BASE_URL=your-backend-api-base-url

# WebSocket 設定(後來直接請後端送 push message 給用戶，取消 websocket 功能)
WEBSOCKET_URL=https://stage-websocket.docter.pro

# 服務設定
PORT=3000
NODE_ENV=development | production

